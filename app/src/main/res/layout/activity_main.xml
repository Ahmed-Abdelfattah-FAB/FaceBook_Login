<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/facebook">


    <ImageView
        android:id="@+id/facebook_image"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:paddingTop="40dp"
        app:layout_constraintWidth_percent="0.8"
        android:src="@drawable/bg_facebook"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/username_email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:hint="@string/email_or_phone_number"
        app:layout_constraintTop_toBottomOf="@id/facebook_image"
        app:layout_constraintStart_toStartOf="@id/facebook_image"
        app:layout_constraintEnd_toEndOf="@id/facebook_image"
        android:background="@drawable/edit_text_login_shape"


        />
    <EditText
        android:id="@+id/password_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:hint="@string/password_login"
        app:layout_constraintTop_toBottomOf="@id/username_email"
        app:layout_constraintStart_toStartOf="@id/username_email"
        app:layout_constraintEnd_toEndOf="@id/username_email"
        android:background="@drawable/edit_text_login_shape"
        />

    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_login"
        app:layout_constraintStart_toStartOf="@id/password_login"
        app:layout_constraintEnd_toEndOf="@id/password_login"
        android:layout_marginTop="10dp"
        android:text="@string/login_button_text"


        />

    <TextView
        android:id="@+id/signup_for_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toStartOf="@id/login_button"
        app:layout_constraintEnd_toEndOf="@id/login_button"
        android:text="@string/signup_for_facebook"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"


        />
    <TextView
        android:id="@+id/help_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signup_for_facebook"
        app:layout_constraintStart_toStartOf="@id/signup_for_facebook"
        app:layout_constraintEnd_toEndOf="@id/signup_for_facebook"
        android:text="@string/help_center"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"


        />








</androidx.constraintlayout.widget.ConstraintLayout>